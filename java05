import java.util.Scanner;

public class MediaPonderada {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Digite a primeira nota e seu peso: ");
        float nota1 = scanner.nextFloat();
        int peso1 = scanner.nextInt();
        System.out.print("Digite a segunda nota e seu peso: ");
        float nota2 = scanner.nextFloat();
        int peso2 = scanner.nextInt();
        System.out.print("Digite a terceira nota e seu peso: ");
        float nota3 = scanner.nextFloat();
        int peso3 = scanner.nextInt();

        float media = (nota1 * peso1 + nota2 * peso2 + nota3 * peso3) / (peso1 + peso2 + peso3);

        System.out.println("MÃ©dia ponderada: " + media);
        
        scanner.close();
    }
}
