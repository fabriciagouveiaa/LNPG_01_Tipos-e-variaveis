#include <stdio.h>

int main() {
    float num1, num2;
    printf("Digite dois números: ");
    scanf("%f %f", &num1, &num2);

    printf("Soma: %.2f\n", num1 + num2);
    printf("Subtração: %.2f\n", num1 - num2);
    printf("Multiplicação: %.2f\n", num1 * num2);
    if(num2 != 0)
        printf("Divisão: %.2f\n", num1 / num2);
    else
        printf("Divisão por zero não é possível.\n");

    return 0;
}
